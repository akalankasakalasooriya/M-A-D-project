<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/content_bg_round"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/announcements_history_single_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/announcement_history_t1"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/announcements_history_single_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/icons8_order_history_64" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_announcement"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:text="@string/announcement_history_update"
                android:textColor="@color/btn_background" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>