            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_name" />

                <TextView
                    android:id="@+id/dashboard_service_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_data3" />
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_description" />

                <TextView

                    android:id="@+id/dashboard_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_data3" />
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_phone" />

                <TextView
                    android:id="@+id/dashboard_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_data3" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_location" />

                <TextView
                    android:id="@+id/dashboard_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_data3" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/dashboardQuestions"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:backgroundTint="#2962FF"
                android:text="@string/service_dashboard_faq_btn"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/feedbackAndRatings"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:backgroundTint="#2962FF"
                android:text="@string/service_dashboard_feedback_nd_ratings"
                android:textColor="#FFFFFF" />

