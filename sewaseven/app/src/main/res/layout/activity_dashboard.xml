    android:layout_height="match_parent"
    tools:context="com.sewaseven.sewaseven.Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!--   content start         -->


            <!--   content end         -->



            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_car" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/updateServiceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fafafa"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageButton
                    android:id="@+id/deleteService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fafafa"
                    app:srcCompat="@drawable/ic_icons8_trash" />

                <ImageButton
                    android:id="@+id/btnPreviousAnnouncements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fafafa"
                    app:srcCompat="@drawable/ic_megaphone" />

                <ImageButton
                    android:id="@+id/btnAddNewAnnouncement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#fafafa"
                    app:srcCompat="@drawable/ic_icons8_plus" />
            </LinearLayout>



            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:gravity=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_ratings"/>

                <TextView
                    android:id="@+id/dashboard_average_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/service_dashboard_data1" />
            </LinearLayout>

